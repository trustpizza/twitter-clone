<div>
  <% if current_user.can_follow?(user) %>
    <%= button_to 'Follow User', user_follows_path(current_user.id),
        params: { follow: {
            sender_id: current_user.id,
            receiver_id: user.id
          }
        }, class: "btn btn-primary w-100"
    %>
  <% else %>
    <%= button_to 'Unfollow', user_follow_path(current_user.id, user.id),
        method: :delete,
        params: { follow: {
            sender_id: current_user.id,
            receiver_id: user.id
          }
        }, class: "btn btn-primary w-100"
    %>
  <% end %>
</div>