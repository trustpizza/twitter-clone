<div class="profile">
  <div class="profile-card">
    <div class="profile-pic"></div>
    <div class="email"></div>
    <div class="bio">
      <%= turbo_frame_tag id="profile", src: profile_path do %>
      <% end %>
      <%= button_to 'Follow User', user_follows_path(current_user.id),
          params: { follow: {
              sender_id: current_user.id,
              receiver_id: @user.id
            }
          }
      %>
      <%= @user %>
    </div>
  </div>
</div>